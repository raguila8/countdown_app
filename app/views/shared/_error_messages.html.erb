<% if @user %>
	<% model = @user %>
<% elsif @countdown%>
  <% model = @countdown %>
<% end %>

<% if model.errors.any? %>
  <div id="error_explanation">
   <ul>
    <li><%= model.errors.full_messages.first %></li>
    </ul>
  </div>
<% elsif flash[:error] %>
	<div id="error_explanation">
  	<ul>
    	<li><%= flash[:error] %></li>
   	</ul>
  </div>
<% end %>
