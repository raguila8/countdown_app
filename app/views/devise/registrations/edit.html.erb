<% provide(:title, "Account") %>

<div class="custom-form">
  <div class="limiter">
  	<div class="container-login100">
  		<div class="wrap-login100 primary-bs">
  			
				<%= render 'shared/edit_account_header' %>	

  			<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "login100-form validate-form", novalidate: :true }) do |f| %>

    			<%= render 'shared/error_messages' %>

          <div class="field wrap-input100 m-b-26">
  					<span class="label-input100">Email</span>
      			<%= f.email_field :email, class: "input100", placeholder: "Enter email"%>
  					<span class="focus-input100"></span>
    			</div>
  
  				<div class="field wrap-input100 validate-input m-b-18">
						<span class="label-input100" style="font-size: 12px; width:90px;">New Password</span>
    				<%= f.password_field :password, autocomplete: "off", class: "input100", placeholder: "Leave blank if you don't want to change it" %>
						<span class="focus-input100"></span>
  				</div>

  				<div class="field wrap-input100 validate-input m-b-18">
						<span class="label-input100" style="font-size: 12px; width:90px;">Confirm New Password</span>
    				<%= f.password_field :password_confirmation, autocomplete: "off", class: "input100", placeholder: "Confirm new password" %>
						<span class="focus-input100"></span>
  				</div>

  				<div class="field wrap-input100 validate-input m-b-18">
						<span class="label-input100" style="font-size: 12px; width:90px;">Current Password</span>
    				<%= f.password_field :current_password, autocomplete: "off", class: "input100", placeholder: "Enter current password" %>
						<span class="focus-input100"></span>
  				</div>

					<div class="actions container-login100-form-btn">
  					<%= f.submit "Update Account", class: "btn g-mb-10 g-mt-20 font-size-16 font-weight-400 g-btn-primary" %>
  				</div>

          <div id="signup-login-div">
  				  <span id="signup-login-span">Unhappy? <%= link_to "Delete Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, id: "signup-login-link" %></span>
  				</div>
				<% end %>	
  		</div>
  	</div>
  </div>	
</div>






<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "login100-form validate-form", novalidate: :true }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
